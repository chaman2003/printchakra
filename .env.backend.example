# PrintChakra Backend Environment Configuration
# Copy values and set in your backend/.env file

# Flask Configuration
BACKEND_URL=https://printchakra-backend.instatunnel.my
PORT=5000
DEBUG=True

# Flask Secret Key (generate a random key for production)
SECRET_KEY=your-secret-key-change-this

# Directories
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
TEXT_DIR=processed_text
PRINT_DIR=app/print_scripts

# Features
ENABLE_OCR=True
ENABLE_SOCKET_IO=True

# CORS Configuration
CORS_ORIGINS=*

# GPU/CUDA (optional)
CUDA_VISIBLE_DEVICES=0
USE_GPU=True

# Ollama Configuration (for AI features)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=phi3:mini

# Whisper Configuration (for voice)
WHISPER_MODEL=base
WHISPER_DEVICE=cuda
