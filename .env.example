# =====================================================================
# PrintChakra - Full Stack Environment Configuration
# =====================================================================
# Copy this file to .env.local or .env.production for local development
# and production deployment respectively.
# =====================================================================

# =====================================================================
# BACKEND CONFIGURATION (Flask Server)
# =====================================================================

# Backend Server
BACKEND_URL=http://localhost:5000
BACKEND_HOST=localhost
BACKEND_PORT=5000
DEBUG=True

# Flask Settings
FLASK_ENV=development
FLASK_APP=app.py

# Directories (relative to backend/)
UPLOAD_DIR=uploads
PROCESSED_DIR=processed
TEXT_DIR=processed_text
PRINT_DIR=print_scripts

# Features
ENABLE_OCR=True
ENABLE_SOCKET_IO=True
ENABLE_GPU_ACCELERATION=True

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=Content-Type,Authorization

# Database (if needed)
# DATABASE_URL=sqlite:///printchakra.db

# =====================================================================
# FRONTEND CONFIGURATION (React App)
# =====================================================================

# Frontend Development
REACT_APP_API_URL=http://localhost:5000
REACT_APP_ENV=development
REACT_APP_DEBUG=false

# Frontend Build
GENERATE_SOURCEMAP=true
INLINE_RUNTIME_CHUNK=false
IMAGE_INLINE_SIZE_LIMIT=10000

# React Strict Mode (set to false in production)
REACT_APP_STRICT_MODE=true

