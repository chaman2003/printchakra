# Backend Environment Configuration
# Copy this file to .env and update values as needed

# OPTION 1: Local Development (default)
# No special configuration needed - Flask runs on localhost:5000

# OPTION 2: ngrok Tunnel
# Set when using ngrok to allow Socket.IO connections
NGROK_URL=https://your-ngrok-url.ngrok-free.dev

# OPTION 3: Deployed Production
# Frontend URL for CORS configuration
FRONTEND_URL=https://your-production-domain.com

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=False

# Optional: Port configuration (default 5000)
# FLASK_PORT=5000

# Optional: Enable detailed logging for debugging
# FLASK_DEBUG=True

# Optional: AI/Voice features
# Disabled by default if dependencies not installed
# ENABLE_GPU=True
# ENABLE_VOICE=True
