# Frontend Environment Configuration
# Copy this file to .env.local and update values as needed

# OPTION 1: Local Development (default)
# When running on localhost, the app automatically detects local backend
# No configuration needed - just leave this commented
# REACT_APP_API_URL=http://localhost:5000

# OPTION 2: ngrok/Tunnel Development
# Uncomment and update with your ngrok URL when using ngrok tunnel
# Get URL from: ngrok http 5000
# REACT_APP_API_URL=https://your-ngrok-url.ngrok-free.dev

# OPTION 3: Deployed Production
# Uncomment and update with your production domain
# REACT_APP_API_URL=https://your-production-domain.com

# OPTION 4: Custom Backend on Same Network
# If backend runs on a different machine on the same network
# REACT_APP_API_URL=http://192.168.1.X:5000

# Debug logging (optional)
# Set to true to see detailed connection logs
REACT_APP_DEBUG=false
